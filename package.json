{
  "name": "transcendence",
  "version": "1.0.0",
  "description": "A Node.js + Typescript + Fastify + Tailwind CSS server",
  "scripts": {
    "dev": "ts-node src/main.ts",
    "build:css": "tailwindcss -i client/src/input.css -o client/dist/output.css --minify",
    "build": "tsc && npm run build:css",
    "start": "node dist/main.js"
  },
  "dependencies": {
    "@fastify/static": "^6.12.0",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.0.3",
    "fastify": "^4.29.1",
    "fastify-plugin": "^4.0.0",
    "fastify-static": "^4.6.1",
    "jsonwebtoken": "^9.0.2",
    "speakeasy": "^2.0.0",
    "sqlite3": "^5.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/speakeasy": "^2.0.10",
    "@types/sqlite3": "^3.1.10",
    "autoprefixer": "^10.4.13",
    "postcss": "^8.4.21",
    "tailwindcss": "^3.3.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  }
}
