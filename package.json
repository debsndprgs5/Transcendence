{
  "name": "transcendence",
  "version": "1.0.0",
  "description": "A Node.js + Typescript + Fastify + Tailwind CSS server",
  "scripts": {
    "dev": "ts-node src/main.ts",
    "build:css": "tailwindcss -i client/src/input.css -o client/dist/output.css --minify",
    "watch:css": "npx tailwindcss -i client/src/input.css -o client/dist/output.css --watch --poll",
    "build:client": "tsc -p tsconfig.client.json",
    "bundle": "esbuild client/src/app.ts --bundle --outfile=client/dist/app.js --platform=browser --format=esm --sourcemap",
    "watch:client": "tsc -p tsconfig.client.json --watch",
    "build": "tsc && npm run build:css",
    "start": "node dist/main.js"
  },
  "dependencies": {
    "@fastify/cookie": "^7.0.0",
    "@fastify/cors": "^8.0.0",
    "@fastify/multipart": "^7.7.3",
    "@fastify/static": "^6.12.0",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.0.3",  
    "esbuild": "^0.19.0",
    "fastify": "^4.29.1",
    "fastify-plugin": "^4.0.0",
    "fastify-static": "^4.6.1",
    "jsonwebtoken": "^9.0.2",
    "sharp": "^0.33.5",
    "speakeasy": "^2.0.0",
    "sqlite3": "^5.0.0",
    "ws": "^8.18.2",
    "babylonjs": "^6.0.0",
	"babylonjs-gui": "^6.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/ms": "^2.1.0",
    "@types/node": "^22.15.19",
    "@types/speakeasy": "^2.0.10",
    "@types/sqlite3": "^3.1.10",
    "@types/ws": "^8.18.1",
    "esbuild": "^0.19.0",
    "autoprefixer": "^10.4.13",
    "postcss": "^8.4.21",
    "tailwindcss": "^3.3.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4",
    "babylonjs":"^6.0.0"
  }
}
